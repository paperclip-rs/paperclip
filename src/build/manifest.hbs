[package]
name = { name | unescaped }
version = { version | unescaped }
authors = { authors | unescaped }
edition = "2018"
{{ if is_cli }}
[[bin]]
name = { name | unescaped }
path = "main.rs"
{{ else }}
[lib]
path = "lib.rs"
{{ endif }}
[dependencies]
async-trait = "0.1"
bytes = "0.5"
thiserror = "1.0"
futures = "0.3"
http = "0.2"
lazy_static = "1.4"
log = "0.4"
mime = \{ git = "https://github.com/hyperium/mime" }
mime_guess = "2.0"
parking_lot = "0.11"
serde = \{ version = "1.0", features = ["derive"] }
serde_json = "1.0"
serde_yaml = "0.8"
tokio-util = \{ version = "0.3", features = ["codec"] }
url = "2.1"
{{ if is_cli }}
anyhow = "1.0"
clap = \{ version = "2.33", features = ["yaml"] }
env_logger = "0.7"
humantime = "2.0"
openssl = \{ version = "0.10", features = ["vendored"] }
tokio = \{ version = "0.2", features = ["fs", "io-util", "io-std", "macros", "rt-threaded"] }
reqwest = \{ version = "0.10", features = ["stream", "json", "native-tls"] }
{{ else }}
tokio = \{ version = "0.2", features = ["fs", "io-util"] }
reqwest = \{ version = "0.10", features = ["stream", "json"] }
{{ endif }}
[workspace]
